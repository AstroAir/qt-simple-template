{
  // C++ Configuration
  "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
  "C_Cpp.default.intelliSenseMode": "clang-x64",
  "C_Cpp.default.cppStandard": "c++20",
  "C_Cpp.default.cStandard": "c17",
  "C_Cpp.errorSquiggles": "enabled",
  "C_Cpp.autocompleteAddParentheses": true,
  "C_Cpp.suggestSnippets": true,

  // CMake Configuration
  "cmake.configureOnOpen": true,
  "cmake.buildDirectory": "${workspaceFolder}/build",
  "cmake.generator": "Ninja",
  "cmake.preferredGenerators": ["Ninja", "Unix Makefiles", "Visual Studio 17 2022"],
  "cmake.configureArgs": [
    "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
    "-DCMAKE_BUILD_TYPE=Debug"
  ],
  "cmake.buildArgs": [
    "--parallel"
  ],
  "cmake.ctestArgs": [
    "--output-on-failure",
    "--parallel"
  ],

  // Qt Configuration
  "qt-tools.qtDir": "",
  "qt-tools.qmakeCommand": "qmake",
  "qt-tools.cmakeCommand": "cmake",

  // clangd Configuration
  "clangd.arguments": [
    "--header-insertion=iwyu",
    "--completion-style=detailed",
    "--function-arg-placeholders",
    "--fallback-style=file",
    "--all-scopes-completion",
    "--cross-file-rename",
    "--log=verbose"
  ],
  "clangd.path": "clangd",
  "clangd.onConfigChanged": "restart",

  // Code Formatting
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "C_Cpp.formatting": "clangFormat",
  "C_Cpp.clang_format_style": "file",
  "C_Cpp.clang_format_fallbackStyle": "Google",

  // File Associations
  "files.associations": {
    "*.h": "cpp",
    "*.hpp": "cpp",
    "*.cpp": "cpp",
    "*.cc": "cpp",
    "*.cxx": "cpp",
    "*.c": "c",
    "*.ui": "xml",
    "*.qrc": "xml",
    "*.pro": "makefile",
    "*.pri": "makefile",
    "*.cmake": "cmake",
    "CMakeLists.txt": "cmake",
    "*.ts": "xml"
  },

  // Search and Files
  "search.exclude": {
    "**/build": true,
    "**/vcpkg_installed": true,
    "**/.git": true,
    "**/.vs": true,
    "**/node_modules": true,
    "**/*.autogen": true,
    "**/moc_*.cpp": true,
    "**/ui_*.h": true,
    "**/qrc_*.cpp": true,
    "**/*.qm": true
  },
  "files.exclude": {
    "**/build": true,
    "**/vcpkg_installed": true,
    "**/.git": true,
    "**/.vs": true,
    "**/node_modules": true,
    "**/*.autogen": true
  },
  "files.watcherExclude": {
    "**/build/**": true,
    "**/vcpkg_installed/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true
  },

  // Editor Settings
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.trimAutoWhitespace": true,
  "editor.rulers": [80, 120],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 120,

  // Git Configuration
  "git.ignoreLimitWarning": true,
  "git.autofetch": true,

  // Terminal Configuration
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.env.windows": {
    "PATH": "${env:PATH};${workspaceFolder}/vcpkg_installed/x64-windows/bin"
  },
  "terminal.integrated.env.linux": {
    "PATH": "${env:PATH}:${workspaceFolder}/vcpkg_installed/x64-linux/bin"
  },
  "terminal.integrated.env.osx": {
    "PATH": "${env:PATH}:${workspaceFolder}/vcpkg_installed/x64-osx/bin"
  },

  // Testing Configuration
  "testMate.cpp.test.executables": "build/**/tests/**/*{test,Test,TEST}*",
  "testMate.cpp.debug.configTemplate": {
    "type": "cppdbg",
    "linux": {
      "type": "cppdbg",
      "MIMode": "gdb"
    },
    "darwin": {
      "type": "cppdbg",
      "MIMode": "lldb"
    },
    "win32": {
      "type": "cppvsdbg"
    }
  },

  // Problem Matchers
  "problems.decorations.enabled": true,

  // Workspace Trust
  "security.workspace.trust.untrustedFiles": "open",

  // Language Specific Settings
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.semanticHighlighting.enabled": true
  },
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.semanticHighlighting.enabled": true
  },
  "[cmake]": {
    "editor.defaultFormatter": "cheshirekow.cmake-format"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.wordWrap": "on"
  }
}